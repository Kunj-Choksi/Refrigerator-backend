<div class="w-full mb-5">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <% content_for :title, "Purchases" %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Items</h1>
    <%= link_to "Back", purchases_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>
  <div class="flex flex-col">
    <div class="overflow-x-auto sm:-mx-6 lg:-mx-8 hidden md:block">
      <div class="inline-block min-w-full py-2 sm:px-6 lg:px-8">
        <div class="overflow-hidden">
          <table class="min-w-full text-left text-sm font-light text-surface dark:text-black">
            <thead class="border-b border-neutral-200 font-medium dark:border-black/10">
              <tr>
                <th scope="col" class="px-6 py-4">Name</th>
                <th scope="col" class="px-6 py-4">Price</th>
                <th scope="col" class="px-6 py-4">Expiration date</th>
                <th scope="col" class="px-6 py-4">Used</th>
                <th scope="col" class="px-6 py-4">&nbsp;</th>
              </tr>
            </thead>
            <tbody>
              <% @purchase_items.each do |purchase_item| %>
                <tr class="border-b border-neutral-200 dark:border-black/10">
                  <td class="whitespace-nowrap px-6 py-4 font-medium"><%= purchase_item.name %></td>
                  <td class="whitespace-nowrap px-6 py-4 font-medium"><%= purchase_item.price %></td>
                  <td class="whitespace-nowrap px-6 py-4 font-medium"><%= purchase_item.expiration_date %></td>
                  <td class="whitespace-nowrap px-6 py-4 font-medium"><%= purchase_item.used ? "✅" : "❌" %></td>
                  <td class="whitespace-nowrap px-6 py-4 font-medium">
                    <%= link_to "Edit", edit_purchase_item_path(purchase_item), class: "text-primary transition duration-150 ease-in-out hover:text-primary-600 focus:text-primary-600 active:text-primary-700 dark:text-primary-400 dark:hover:text-primary-500 dark:focus:text-primary-500 dark:active:text-primary-600" %>
                  </td>
                  <td class="whitespace-nowrap px-6 py-4 font-medium">
                    <%= link_to "Delete", purchase_item_path(purchase_item), data: { confirm: "Delete?", "turbo-method": :delete }, class: "text-danger transition duration-150 ease-in-out hover:text-danger-600 focus:text-danger-600 active:text-danger-700 dark:text-danger-400 dark:hover:text-danger-500 dark:focus:text-danger-500 dark:active:text-danger-600" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <div class="md:hidden">
      <% @purchase_items.each do |purchase_item| %>
        <div class="block rounded-lg bg-white p-6 text-surface shadow-secondary-1 dark:bg-surface-dark dark:text-white mt-10">
          <div class="flex justify-between">
            <h5 class="mb-2 text-xl font-medium leading-tight"><%= purchase_item.name %></h5>
          </div>
          <ol class="m-2">
            <li><span>Amount:</span> $ <%= purchase_item.price %></li>
            <li><span>Expiry Date:</span> <%= purchase_item.expiration_date %></li>
          </ol>
          <div class="mt-2">
            <%= link_to "Edit", edit_purchase_item_path(purchase_item), class: "inline-block rounded bg-primary px-6 pb-2 pt-2.5 text-xs font-medium uppercase leading-normal text-white shadow-primary-3 transition duration-150 ease-in-out hover:bg-primary-accent-300 hover:shadow-primary-2 focus:bg-primary-accent-300 focus:shadow-primary-2 focus:outline-none focus:ring-0 active:bg-primary-600 active:shadow-primary-2 dark:shadow-black/30 dark:hover:shadow-dark-strong dark:focus:shadow-dark-strong dark:active:shadow-dark-strong" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>